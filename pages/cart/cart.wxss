/* pages/cart/cart.wxss */
.item {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  background-color: #fafafa;
  display: flex;
  position: relative;
}
.item .info {
  width: 70%;
  height: 200rpx;
}
.item .info text{
  display: inline-block;
  margin-top: 5%;
  margin-left: 15rpx;
  vertical-align:top;
}
.item .info image {
  height: 100%;
  width: 40%;
}

.item .num {
  display: inline-block;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 60rpx;
}

.item .num text{
  display: inline-block;
  width: 50rpx; 
  height: 50rpx;
  background-color: #fff;
  line-height: 50rpx;
  text-align: center;
}
.item .num .num-change {
  border: 1px solid red;
}
.price {
  width: 100%;
  height: 80rpx;
  position: fixed;
  text-align: right;
  bottom: 0;
  background-color: #fff;
}
.price text {
  color: red;
  margin-right: 15rpx;
}
.tip {
  color:#333;
  width: 100%;
  margin-top:200rpx;
  text-align: center;
}